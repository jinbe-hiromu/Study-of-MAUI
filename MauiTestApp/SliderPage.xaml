<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.SliderPage"
             Title="SliderPage">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="スライダーで指定" SemanticProperties.HeadingLevel="Level1" HorizontalOptions="Center" FontSize="32"/>
        <Slider x:Name="slider"
                Minimum="100.0"
                Maximum="500.0"
                Value="300"
                ValueChanged="ChangeSlider"/>
        <Image x:Name="img"
               Source="rakuten_panda2.png"
               HorizontalOptions="Center"
               WidthRequest="300"
               HeightRequest="300"/>
    </VerticalStackLayout>
</ContentPage>