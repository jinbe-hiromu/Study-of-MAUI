<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiTestApp.SwitchPage"
             Title="SwitchPage">
    <VerticalStackLayout Spacing="25" Padding="30">
        <Label Text="オン・オフの指定" SemanticProperties.HeadingLevel="Level1" FontSize="32" HorizontalOptions="Center"/>
        <Switch x:Name="sw" Toggled="ChangeToggle"/>
        <Image
            x:Name="img"
            Source="rakuten_panda.png"
            WidthRequest="300"
            HeightRequest="300"
            HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>